<% if friend.asylum_application_drafts.present? %>
  <h4>Asylum Application Drafts</h4>
<% end %>

<% friend.asylum_application_drafts.order('created_at desc').each do |draft| %>
  <div>
    <p>
      <%= link_to 'Placeholder for File Name', edit_friend_asylum_application_draft_path(friend, draft), remote: true, class: 'open_asylum_application_draft_edit_modal' %>
      <%= draft.created_at.strftime("-- %A, %B %-d, %Y") %>
      <%= link_to 'Remove', friend_asylum_application_draft_path(friend, draft), method: :delete, :remote => true, class: 'delete' %>
    </p>
    <% if draft.users.present? %>
      <p><strong>Team:  </strong><%= draft.users.map(&:name).to_sentence %></p>
    <% end %>

    <% if draft.notes.present? %>
      <p><strong>Notes:  </strong><%= draft.notes %></p>
    <% end %> 
  </div>
  <br>
<% end %>

<script>
  $(document).ready(function () {
    $('.open_asylum_application_draft_edit_modal').click(function() {
      $('#add_asylum_application_draft_modal').modal('show');
    });
  });
</script>