<div class='row form-group'>
  <%= form_for [current_community, friend], remote: true do |f| %>
    <%= fields_for(@friend.user_friend_associations.build) do |fl| %>
      <%= fl.label :users,'Volunteers with Access', class: 'col-md-3 control-label' %>
      <div class='col-md-9'>
        <%= collection_select(:friend, :user_ids, current_community.users.confirmed, :id, :name, {selected: @friend.volunteers_with_access.pluck(:id)}, {multiple: true, prompt: true, class: 'js-chosen form-control', id: 'volunteer-shares-friend'}) %>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  $(document).ready(function () {
    activateChosen();
    $('#volunteer-shares-friend').change(function(){
      $('.edit_friend').submit();
    });
  });
</script>