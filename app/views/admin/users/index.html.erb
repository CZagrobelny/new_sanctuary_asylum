<div class='row'>
  <%= link_to 'Invite User', new_user_invitation_path, class: 'btn btn-primary pull-right'%>
</div>
<%= form_tag admin_users_path, method: :get do %>
  <div class='row'>
    <div class='col-md-3'>
      <h1><%= link_to "Users", admin_users_path %></h1>
    </div>
    <div class='col-md-4 col-md-offset-5'>
      <%= text_field_tag :query, params[:query], placeholder: 'Search by first name, last name, or email', class: 'form-control input-md', style: 'margin-top: 20px; margin-bottom: 10px;' %>
      <a href="#" data-toggle-search-filters="true">Advanced Search</a>
    </div>
  </div>
  <%= content_tag :div, class: 'row' do %>
    <%=
      content_tag :div, class: 'col-md-12 friend-search-filters',
        data: {show_search_filters: user_search_filtered?} do
    %>
      <h4>Filters</h4>
      <dl>
        <dt>User Type</dt>
        <dd>
          <label>
            <%= select_tag :volunteer_type, options_for_select(user_volunteer_type_options, params[:volunteer_type]), include_blank: true %>
          </label>
        </dd>
      </dl>
    <% end %>
  <% end %>
<% end %>
<% if @users.present? %>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Type</th>
        <th>Admin?</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr id="user-<%=user.id%>" style="<%= 'color: #b3b3b3;' unless user.confirmed? %>">
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.volunteer_type.try(:titleize) %></td>
          <td><%= user.admin? ? 'YES' : 'NO' %></td>
          <td><%= user.created_at.strftime('%m/%d/%y') %></td>
          <td>
            <div class='btn-group'>
              <%= link_to edit_admin_user_path(user), id: "edit-user-#{user.id}", class: "btn btn-default" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <button type='button' class='btn dropdown-toggle btn-default' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><%= link_to 'Delete', admin_user_path(user, query: params[:query]), method: :delete, confirm: true %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pull-right'>
    <%= will_paginate @users %>
  </div>
<% else %>
  <h3>No search results matched your criteria.</h3>
<% end %>
