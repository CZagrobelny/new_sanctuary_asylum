<div class='row'>
  <%= link_to 'New Event', new_community_admin_event_path(current_community.slug), class: 'btn btn-primary pull-right'%>
</div>
<h1>Events</h1>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Date/Time</th>
      <th>Volunteers ~ Friends</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr id="event-<%=event.id%>">
        <td><%= link_to event.category.titlecase, attendance_community_admin_event_path(current_community.slug, event) %></td>
        <td><%= event.title %></td>
        <td><%= event.date.strftime("%I:%M %p, %A, %B %-d, %Y") %></td>
        <td><%= "#{event.user_attendances.count} ~ #{event.friend_attendances.count}" %></td>
        <td><%= event.location.name %></td>
        <td>
          <div class='btn-group'>
            <%= link_to(edit_community_admin_event_path(current_community.slug, event), id: "edit-event-#{event.id}", class: "btn btn-default") do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <button type='button' class='btn dropdown-toggle btn-default' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
              <span class='caret'></span>
            </button>
            <ul class='dropdown-menu'>
              <li><%= link_to 'Delete', community_admin_event_path(current_community.slug, event), method: :delete, confirm: true %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='pull-right'>
  <%= will_paginate @events %>
</div>
