<%= form_for [current_community, :admin, @location] do |f| %>

  <%= display_validation_errors(@location) %>

  <div class='form-inputs'>
    <div class='row form-group'>
      <%= f.label :name, 'Name', class: 'col-md-2 control-label required' %>
      <div class='col-md-6'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-1 col-md-offset-7'>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>