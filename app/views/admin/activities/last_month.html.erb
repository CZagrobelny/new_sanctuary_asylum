<p><%= link_to 'Add Activity', new_admin_activity_path, class: 'btn btn-primary pull-right' %></p>
<h1>Last Month Activities</h1>

<p><%= link_to 'View Current Month Activities', admin_activities_path %></p>
<% @activities.each do |week| %>
  <h2><%= week[:dates] %></h2>
  <% week[:activities].each do |day| %>
    <h4><%= day[0].strftime('%A, %B %-d') %></h4>
    <% day[1].each do |activity| %>
      <div id="activity_<%= activity.id %>">
        <%= render partial: 'activity', locals: {activity: activity, friend: activity.friend} %>
      </div>
    <% end %>
  <% end %>
<% end %>
<br>
