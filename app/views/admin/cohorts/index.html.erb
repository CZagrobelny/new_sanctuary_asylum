<div class='row'>
  <%= link_to 'New Cohort', new_community_admin_cohort_path(current_community.slug), class: 'btn btn-primary pull-right'%>
</div>
<div class='col-md-7'>
  <h1>Cohorts</h1>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Start Date</th>
        <th>Color</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cohorts.each do |cohort| %>
        <tr id="cohort-<%=cohort.id%>">
          <td><%= link_to cohort.start_date.strftime("%B %-d, %Y"), assignment_community_admin_cohort_path(current_community.slug, cohort) %></td>
          <td style="background-color: <%= cohort.color %>;"></td>
          <td>
            <div class='btn-group'>
              <%= link_to(edit_community_admin_cohort_path(current_community.slug, cohort), id: "edit-cohort-#{cohort.id}", class: "btn btn-default") do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <button type='button' class='btn dropdown-toggle btn-default' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><%= link_to 'Delete', community_admin_cohort_path(current_community.slug, cohort), method: :delete, confirm: true %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pull-right'>
    <%= will_paginate @cohorts %>
  </div
</div>