<div class='modal' id='detention_modal'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
        <h4 class='modal-title'>Detention</h4>
      </div>
      <div class='modal-body'>
        <div id='detention-form'>
          <%= render partial: 'admin/friends/detentions/form', locals: { friend: detention.friend, detention: detention } %>
        </div>
      </div>
    </div>
  </div>
</div>