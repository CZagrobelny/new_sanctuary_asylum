<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit', class: 'well' }  do |f| %>
  <div class='form-group col-md-3'>
    <%= f.label :filter_first_name, 'First Name' %>
    <%= f.text_field(:filter_first_name) %>
  </div>
  <div class='form-group col-md-3'>
    <%= f.label :filter_last_name, 'Last Name' %>
    <%= f.text_field(:filter_last_name) %>
  </div>
  <div class='form-group col-md-3'>
    <%= f.label :filter_a_number, 'A Number' %>
    <%= f.text_field(:filter_a_number) %>
  </div>
  <div class='form-group'>
    <%= f.label :filter_detained, 'Detained' %>
    <%= f.check_box(:filter_detained) %>
  </div>

  <div class='form-group'>
    <%= f.label :filter_start_date, 'With their 1 year asylum application deadlines ending between dates:' %>

    <%= f.text_field :filter_asylum_application_deadline_ending_after, class: 'datepicker' %>
    <%= f.text_field :filter_asylum_application_deadline_ending_before, class: 'datepicker' %>
  </div>

  <div class='form-group'>
    <%= f.label :filter_created_date, 'Created between dates:' %>

    <%= f.text_field :filter_created_after, class: 'datepicker' %>
    <%= f.text_field :filter_created_before, class: 'datepicker' %>
  </div>

  <div class='row'>
    <div class='form-group col-md-5'>
      <%= f.label :filter_border_queue_number, 'Border Queue Number' %>
      <%= f.text_field(:filter_border_queue_number) %>
    </div>

    <div class='form-group col-md-7'>
      <div>
        <%= f.label :sorted_by, 'Sorted by' %>
        <%= f.select :sorted_by, @filterrific.select_options[:sorted_by], { class: 'form-control' } %>
      </div>
    </div>
  </div>

  <div>
    <%= submit_tag 'Search'%>
  </div>
<% end %>
