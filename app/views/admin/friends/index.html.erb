<div class='row'>
  <%= link_to 'New Friend', new_admin_friend_path, class: 'btn btn-primary pull-right'%>
</div>
<%= form_tag admin_friends_path, method: :get do %>
  <div class='row'>
    <div class='col-md-3'>
      <h1><%= link_to "Friends", admin_friends_path %></h1>
    </div>
    <div class='col-md-4 col-md-offset-5'>
      <%= text_field_tag :query, params[:query], placeholder: 'Search by first name, last name, or A#',
        class: 'form-control input-md', style: 'margin-top: 20px; margin-bottom: 10px;' %>
    </div>
  </div>
  <%= content_tag :div, class: 'row', data: {show_filters: params[:commit].present?} do %>
    <div class='col-md-12 friend-search-filters'>
      <h4>Filters</h4>
      <dl>
        <dt>Detention Status</dt>
        <dd>
          <label>
            Detained <%= check_box_tag :detained, 'yes', params[:detained] == 'yes' %>
          </label>
        </dd>
      </dl>
      <%= submit_tag 'Update', class: 'btn btn-primary btn-sm', name: nil %>
    </div>
  <% end %>
<% end %>
<% if @friends.present? %>
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>A#</th>
        <th>Phone Number</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr id="friend-<%=friend.id%>">
          <td><%= friend.id %></td>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.a_number %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.created_at.strftime('%m/%d/%y') %></td>
          <td>
            <div class='btn-group'>
              <%= link_to(edit_admin_friend_path(friend), id: "edit-friend-#{friend.id}", class: 'btn btn-default') do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <button type='button' class='btn dropdown-toggle btn-default' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><%= link_to 'Delete', admin_friend_path(friend, query: params[:query]), method: :delete, confirm: true %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class='pull-right'>
    <%= will_paginate @users %>
  </div>
<% else %>
  <h3>No search results matched your criteria.</h3>
<% end %>
