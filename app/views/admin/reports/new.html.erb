<h1>Reports</h1>

<%= display_validation_errors(@report) %>

<%= form_for :report, url: community_admin_reports_create_path(current_community.slug) do |f| %>
  <div class='row form-group'>
    <%= f.label :type, 'Type', class: 'col-md-3 col-xs-12 control-label' %>
    <div class='col-md-4 col-xs-12'>
      <%= f.select :type, options_for_select([['Activity', 'activity'], ['Event', 'event']], @report.type), {include_blank: true}, {class: 'form-control'} %>
    </div>
  </div>

  <div class='row form-group'>
    <%= f.label :start_date, 'Start Date', class: 'col-md-3 col-xs-12 control-label' %>
    <div class='col-md-6 col-xs-12'>
      <%= f.text_field :start_date, class: 'datepicker form-control' %>
    </div>
  </div>

  <div class='row form-group'>
    <%= f.label :end_date, 'End Date', class: 'col-md-3 col-xs-12 control-label' %>
    <div class='col-md-6 col-xs-12'>
      <%= f.text_field :end_date, class: 'datepicker form-control' %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-1'>
      <%= f.submit 'Generate', class: 'btn btn-primary' %>
    </div>
  </div>

  <br>

  <p class='text-muted'>If the 'Generate' button is disabled, refresh the page to generate a new report.</p>

<% end %>