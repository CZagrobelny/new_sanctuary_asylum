<div class='col-md-offset-3 col-md-6'>
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, url: user_confirmation_path, html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class='form-inputs'>
      <div class='form-group field'>
        <%= f.label :email, class: 'control-label' %></ br>
        <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control' %>
      </div>

    <div class='actions'>
      <%= f.submit t('devise.invitations.new.submit_button'), class: 'btn btn-primary'  %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
