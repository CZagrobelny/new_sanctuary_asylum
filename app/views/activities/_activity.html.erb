<div class='row' id="activity_<%= activity.id %>">
  <div class='col-md-10 col-sm-8 col-xs-8'>
    <strong>Who:  </strong><%= activity.friend.first_name %><br>
    <strong>What:  </strong><%= activity.event.humanize %><br>
    <strong>When:  </strong><%= activity.occur_at.strftime("%I:%M %p") %><br>
    <strong>Where:  </strong><%= activity.location.name %><br>
    <strong>Volunteers:  </strong><%= activity.volunteers.map(&:first_name).to_sentence %>
  </div>
  <div class='col-md-2 col-sm-4 col-xs-4'>
    <% if current_user.attending?(activity) %>
      <button type='button' class='btn btn-success pull-right' data-toggle='modal' data-target="#activity_<%= activity.id %>_accompaniement_modal">Edit RSVP</button>
    <% else %>
      <button type='button' class='btn btn-primary pull-right' data-toggle='modal' data-target="#activity_<%= activity.id %>_accompaniement_modal">Attend</button>
    <% end %>
  </div>
</div>
<br>